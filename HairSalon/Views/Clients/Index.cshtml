@{
  Layout = "_Layout";
}

@using FavoriteClient.Models;
@model List<FavoriteClient.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0 )
{
  <h3>No clients have been added yet!</h3>
  <h3>Please add a stylist first.</h3>
}

@foreach (Client client in Model)
{
 <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Type</li>
}
<br> 
<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p> 

  
  










