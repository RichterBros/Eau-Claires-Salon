@{
  Layout = "_Layout";
}

@using FavoriteClient.Models;
@model List<FavoriteClient.Models.Stylist>;

<h1>Cuisines</h1>






@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet! Please add a stylist.</h3> 
  <p>@Html.ActionLink("Add new stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>

}
else

{
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Type}", "Details", new { id = stylist.StylistId })</li>
}
<p>@Html.ActionLink("Add new stylist", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add a new Client to the Favorite Clients List", "Create", "Clients")</p>
}

  
    
  




